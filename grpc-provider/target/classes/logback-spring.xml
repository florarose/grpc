<?xml version="1.0" encoding="UTF-8"?>
<!-- Logback configuration. See http://logback.qos.ch/manual/index.html -->
<configuration scan="true" scanPeriod="60 seconds">
    <contextName>logback</contextName>
    <property name="log.filePath" value="${catalina.base}/logs/webapps"></property>
    <!-- trace debug info warn error -->
    <!-- <include resource="org/springframework/boot/logging/logback/base.xml" /> -->

    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %caller{1} %-5level %logger{50} - %msg%n
            </pattern>
        </layout>
    </appender>
    <!-- 按照每天生成日志文件 -->
    <appender name="FILE"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <file>../logs/iweb.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>../logs/log.%d{yyyy-MM-dd}.log.%i.gz</FileNamePattern>
            <!--日志文件最大的大小-->
            <MaxFileSize>100MB</MaxFileSize>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <!--  <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
             <level>debug</level>
         </filter> -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %caller{1} %-5level %logger{50} - %msg%n
            </pattern>
        </layout>
    </appender>

    <!-- 控制包内的日志记录级别
    <logger name="com.ginkodrop.icare.api" level="ERROR" additivity="true">
    	<appender-ref ref="FILE" />
    </logger>
 	 -->

    <logger name="com.ginkodrop" level="DEBUG" addictivity="true">
        <appender-ref ref="FILE" />
    </logger>

    <root level="WARN">
        <appender-ref ref="console" />
    </root>

</configuration>